<% layout('layouts/boilerplate') %>
<section id="section-search" class="mt-[80px] mb-10">
  <div class="container w-screen">
    <div class="px-6 w-1/3 font-[Poppins] text-slate-700 md:pl-24">
      <div class="w-1/2 mb-2">
        <div class="flex text-white w-[80%] justify-between mb-2">
          <p class="bg-sky-500 py-1 px-2 rounded-full cursor-pointer">Siswa</p>
          <p class="bg-sky-500 py-1 px-2 rounded-full cursor-pointer">Guru</p>
        </div>
        <p>Cari berdasarkan:</p>
      </div>
      <div class="flex justify-between text-white mb-4">
        <p class="bg-sky-500 py-1 px-2 rounded-full cursor-pointer">Nama</p>

        <p class="bg-sky-500 py-1 px-2 rounded-full cursor-pointer">Nik</p>

        <p class="bg-sky-500 py-1 px-2 rounded-full cursor-pointer">Angkatan</p>

        <p class="bg-sky-500 py-1 px-2 rounded-full cursor-pointer">Kelas</p>
      </div>
      <form
        class="mb-5 ring-2 rounded-full py-1 px-2 flex justify-between w-[300px] md:w-[320px]"
      >
        <input
          id="query"
          name="query"
          class="ml-2 w-[210px] border-transparent focus:border-none focus:ring-0 focus:outline-none focus:outline-0 md:w-[236px]"
          type="text"
        />
        <button
          id="search-btn"
          class="bg-sky-500 py-1 rounded-lg px-2 text-white"
        >
          Cari
        </button>
      </form>
    </div>
  </div>
</section>
<section id="section-data" class="mt-10px mb-72">
  <div
    class="container w-screen px-4 font-[Poppins] text-slate-700 md:pl-24"
  ></div>
</section>
