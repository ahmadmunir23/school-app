<% layout('layouts/boilerplate') %>
<section class="mt-32 mb-32 font-[Poppins]">
  <div id="parent-login" class="container w-screen md:pl-14">
    <div class="w-full flex justify-center">
      <form class="w-[70%] md:w-1/3 shadow-2xl rounded-lg py-10 text-slate-700">
        <div class="w-[64%] mx-auto flex flex-col">
          <label for="email">Email</label>
          <input
            id="email"
            type="email"
            name="email"
            class="mb-5 ring-2 rounded-sm py-1 px-2"
          />
        </div>
        <div class="w-[64%] mx-auto flex flex-col">
          <label for="password">Password</label>
          <input
            id="password"
            type="password"
            name="password"
            class="mb-5 ring-2 rounded-sm py-1 px-2"
          />
        </div>
        <button
          id="login-button"
          type="submit"
          class="py-2 px-2 bg-sky-400 rounded-md ml-12 md:ml-[71px]"
        >
          Login
        </button>
      </form>
    </div>
  </div>
</section>
