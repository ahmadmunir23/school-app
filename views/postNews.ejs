<% layout('layouts/boilerplate') %>
<section class="mt-28 mb-10 font-[Poppins]">
  <div class="container w-screen">
    <div class="w-full px-4 md:pl-24">
      <form action="" class="flex flex-wrap w-1/5">
        <label for="judul">Judul Post</label>
        <input
          type="text"
          name="judul"
          id="judul"
          class="mb-5 ring-2 rounded-sm py-1 px-2"
        />
        <label for="isi">Isi Post</label>
        <textarea
          name="isi"
          id="isi"
          class="mb-5 ring-2 rounded-sm w-[330px] h-[400px]"
        ></textarea>
        <!-- <input type="" name="isi" id="isi" class="mb-5 ring-2 rounded-sm" /> -->
        <input
          type="hidden"
          name="author"
          id="author"
          value="<%= user._id %>"
        />
        <label for="isi">Jenis Berita</label>
        <select name="type" id="type" class="mb-5 ring-2 rounded-sm py-1 px-2">
          <option value="pengumuman">Pengumuman</option>
          <option value="berita">Berita</option>
        </select>

        <label for="headline">Post Utama</label>
        <select
          name="headline"
          id="headline"
          class="mb-5 ring-2 rounded-sm py-1 px-2"
        >
          <option value="true">Ya</option>
          <option value="false">Tidak</option>
        </select>
        <div class="w-full">
          <button
            id="post-button"
            class="py-2 px-4 bg-sky-400 rounded-lg font-semibold text-white mt-3"
          >
            Post
          </button>
        </div>
      </form>
    </div>
  </div>
</section>
